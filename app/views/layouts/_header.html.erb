<header>
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-inner">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <h1>
            <%= link_to "KAKAI", root_path, class: "navbar-brand" %>
          </h1>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <% unless user_signed_in? %>
              <li><%= link_to "新規登録", new_user_registration_path %></li>
              <li><%= link_to "ログイン", new_user_session_path %></li>
            <% else %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                  ログイン中： <%= current_user.name %>
                  <%#= current_user.name %>
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to "プロフィール編集" , edit_user_registration_path(current_user)  %>
                  </li>
                  <li role="separator" class="divider"></li>
                  <li>
                    <%= link_to '歌の履歴', current_user %>
                  </li>                  
                  <li role="separator" class="divider"></li>                  <li>
                    <%= link_to '管理者に連絡', inquiry_path %>
                  </li>                  
                  <li role="separator" class="divider"></li>
                  <li>
                    <%= link_to 'ログアウト', destroy_user_session_path, method: 'DELETE' %>
                  </li>
                </ul>
              </li>
              <% if current_user.notices.count > 0 %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                  <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                  お知らせ
                  (<%= Noteship.where(user_id: current_user.id).order(created_at: :desc).first.created_at.to_s(:short) %>)
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu  notices_list" >
                  <%= render partial: 'notices/notice', collection: current_user.notices.order(created_at: :desc).limit(10) %>    
                </ul>
              </li>
              <% end %>
              <% if current_user.holder %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                  出題者メニュー
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to "出題" , new_dai_path %>
                  </li>
                  <li role="separator" class="divider"></li>
                  <li>
                    <%= link_to "出題一覧", manage_dais_path %>
                  </li>
                </ul>
              </li>
              <% end %>
              <% if current_user.admin %>
              <li>
                <%= link_to users_path do %>
                  会員一覧
                <% end %>
              </li>
              <% end %>
              
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </nav>
</header>
