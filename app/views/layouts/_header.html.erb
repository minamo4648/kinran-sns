<header>
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-inner">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <h1>
            <%= link_to "KAKAI", root_path, class: "navbar-brand" %>
          </h1>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <% unless user_signed_in? %>
              <li><%= link_to "新規登録", new_user_registration_path %></li>
              <li><%= link_to "ログイン", new_user_session_path %></li>
            <% else %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                    <%= current_user.name %>
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to "プロフィール編集" , edit_user_registration_path(current_user)  %>
                  </li>
                  <li role="separator" class="divider"></li>
                  <li>
                    <%= link_to '歌の履歴', current_user %>
                  </li>                  
                  <li role="separator" class="divider"></li>                  <li>
                    <%= link_to '管理者に連絡', inquiry_path %>
                  </li>                  
                  <li role="separator" class="divider"></li>
                  <li>
                    <%= link_to 'ログアウト', destroy_user_session_path, method: 'DELETE' %>
                  </li>
                </ul>
              </li>
              <% if new_notices.count > 0 %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                  <% if Time.zone.now - current_user.noteships.order(created_at: :desc).first.created_at < 1.day %>
                    <font color="#028760"><span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span></font>
                  <% end %>
                  お知らせ
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu  notices_list" >
                  <%= render partial: 'notices/notice', collection: new_notices %>    
                </ul>
              </li>
              <% end %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                  <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                  閲覧
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to "全作品" , look_for_tankas_path %>
                  </li>
                <% if Renga.where(place: 18, picked: true).present? %>
                  <li role="separator" class="divider"></li>
                  <li>
                    <%= link_to "連歌", kogyos_path %>
                  </li>
                <% end %>
                </ul>
              </li>             
              <% if current_user.holder %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                  <span class="glyphicon glyphicon-blackboard" aria-hidden="true"></span>
                  出題者
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to "出題" , new_dai_path %>
                  </li>
                  <li role="separator" class="divider"></li>
                  <li>
                    <%= link_to "出題一覧", manage_dais_path %>
                  </li>
                </ul>
              </li>
              <% end %>
              <li>
                <% if kogyo_fase == 1 %>
                  <%= link_to new_kogyo_path do %>
                    <span class="glyphicon glyphicon-blackboard" aria-hidden="true"></span>
                    連歌
                  <% end %>
                <% else %>
                  <% if Renga.where(kogyo_id: Kogyo.last.id, user_id: current_user.id, place: Kogyo.last.place).present? %>
                      <%= link_to edit_renga_path(Renga.where(kogyo_id: Kogyo.last.id, user_id: current_user.id, place: Kogyo.last.place).take) do %>
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        連歌
                      <% end %>                    
                  <% else %>
                      <%= link_to new_renga_path do %>
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        連歌
                      <% end %>
                  <% end %>    
                <% end %>
              </li>
              <% if current_user.admin %>
              <li>
                <%= link_to users_path do %>
                  会員一覧
                <% end %>
              </li>
              <% end %>
              
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </nav>
</header>
