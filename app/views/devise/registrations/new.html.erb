<h2>会員登録</h2>

<div class="col-md-7 col-md-offset-5">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name, "名前" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>
  
      <%= f.label :grade,"学年" %>
      <%= f.radio_button :grade, six_year_array[0] %> <%= f.label :grade_1, six_year_array[0].to_s + "期" %>
      <%= f.radio_button :grade, six_year_array[1] %> <%= f.label :grade_2, six_year_array[1].to_s + "期" %>
      <%= f.radio_button :grade, six_year_array[2] %> <%= f.label :grade_3, six_year_array[2].to_s + "期" %>
      <%= f.radio_button :grade, six_year_array[3] %> <%= f.label :grade_4, six_year_array[3].to_s + "期" %>
      <%= f.radio_button :grade, six_year_array[4] %> <%= f.label :grade_5, six_year_array[4].to_s + "期" %>
      <%= f.radio_button :grade, six_year_array[5] %> <%= f.label :grade_6, six_year_array[5].to_s + "期" %><br />
      (<%= six_year_array[0] %>期生が高３) <br />
    
      <label>性別</label>
      <label><%= f.radio_button :gender, "1" %>男</label>
      <label><%= f.radio_button :gender, "2" %>女</label>
      <br />

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %> 字以上)
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード再入力" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "登録",class: "btn btn-large btn-default" %>
  </div>
<% end %>

</div>

<%#= render "devise/shared/links" %>
