<!-- render partial: "shared/name", locals: {user: @user} -->

<% if user.nickname.present? %>

    <%= user.nickname %>
    
        <% if current_user.admin %>
            <small><font color="#aaa"><%= user.name %></font></small>
        <% end %>

<% else %>

    <font color="#028760"><%= user.name %></font>

<% end %>